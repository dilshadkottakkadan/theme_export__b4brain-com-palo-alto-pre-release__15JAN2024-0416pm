<div class="hero-banner" {%- if section.settings.bg -%} style="background-image: url({{ section.settings.bg | img_url: '2048x'}});"{%- endif -%}>
    <div class="container tc flex column fl_center h__100">
        {% if section.settings.topheading != empty %}
            <h4>{{section.settings.topheading}}</h4>
        {% endif %}
        <h1>{{section.settings.heading}}</h1>
    </div>
</div>

{%- schema -%}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "topheading",
      "label": "Top Heading"
    },
    {
      "type": "image_picker",
      "id": "bg",
      "label": "Background Image"
    }
  ]
}
{%- endschema -%}