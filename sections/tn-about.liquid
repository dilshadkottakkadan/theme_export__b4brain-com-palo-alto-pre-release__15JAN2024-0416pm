<div class="tn-about">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'content' %}
        <div class="tn-about-content tc" {{ block.shopify_attributes }}>
          <div class="container">
            <h3 class="heading">{{ block.settings.heading | newline_to_br }}</h3>
            <div class="content">
              {{ block.settings.content | newline_to_br }}
            </div>
          </div>
        </div>

      {% when 'full_image' %}
        <div class="tn-about-full_image" {{ block.shopify_attributes }}>
          <div class="container">
            <div class="img tc">{{ block.settings.image | img_url: '2048x' | img_tag }}</div>
          </div>
        </div>

      {% when 'highlight' %}
        <div class="tn-about-highlight" {{ block.shopify_attributes }}>
          <div class="container">
            <div class="wrap">
              <div class="text">
                <h3 class="heading">{{ block.settings.title | newline_to_br }}</h3>
                <h4 class="subheading">{{ block.settings.subheading | newline_to_br }}</h4>
                <div class="content">{{ block.settings.content | newline_to_br }}</div>
              </div>
              <div class="img tc">{{ block.settings.image | img_url: '2048x' | img_tag }}</div>
            </div>
          </div>
        </div>

      {%- when 'features' -%}
        <div class="tn-about-features tc">
        {% for i in (1..5) %}
          {% assign key = i | prepend:'img' | append: '_txt' %}
          {% assign key2 = i | prepend:'img' | append: '_txt2' %}
          {% assign imgkey = i | prepend:'img' %}
          {% if block.settings[key] != empty and block.settings[imgkey] != empty %}
            <div class="feature-item">
              {{ block.settings[imgkey] | img_url: '2048x' | img_tag }}
              <h4>{{ block.settings[key] | newline_to_br }}</h4>
              <h6>{{ block.settings[key2] | newline_to_br }}</h6>
            </div>
          {% endif %}
        {% endfor %}
      </div>


    {% endcase %}
  {% endfor %}
  </div>

