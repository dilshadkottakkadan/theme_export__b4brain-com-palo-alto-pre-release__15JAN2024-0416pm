{% schema %}
{
  "name": "Manufacture",
  "tag": "section",
  "class": "tn-manufacture",
  "settings": [
    {
      "type": "header",
      "content": "Manufacture"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "desc",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
     {
      "type": "url",
      "id": "button_link",
      "label": "Link"
      }
  ],
  "blocks": [
    {
      "name": "Item",
      "type": "slide",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "desc",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "05. Manufacture Watch",
      "category": "I. Collections"
    }
  ]
}
{% endschema %}

<div class="tn-section manufacture-section">
  <div class="container">
    <div class="main-text tc">
      <h3 class="title">{{ section.settings.heading }}</h3>
      <p class="main-desc">{{ section.settings.desc | newline_to_br }}</p>
      <!-- <a class="btn {{ section.settings.button_style }} {{ section.settings.button_size }} {{ section.settings.button_color }}"
        href="{{ section.settings.button_link | default: '#' }}">
        {{- section.settings.button_text | escape -}}
      </a> -->
    </div>

    <div class="items pr">

      <div class="img-holder pa-center">
        <span class="circle pa-center"></span>
        <a class="img pr tc" href="{{ section.settings.button_link }}">
          {{ section.settings.image | img_url: '2048x' | img_tag }}
        </a>
      </div>

      {% for block in section.blocks %}
      {% case block.type %}
      {% when 'slide' %}
      {% assign button_link = block.settings.button_link | default: '#' %}
      <div class="item" {{ block.shopify_attributes }}>
        <div class="number">{{ block.settings.number | newline_to_br }}</div>
        <div class="text">
          <h4>{{ block.settings.heading | newline_to_br }}</h4>
          <p>{{ block.settings.desc | newline_to_br }}</p>
          <!-- <a class="btn1 {{ section.settings.button_style }} {{ section.settings.button_size }} {{ section.settings.button_color }}"
            href="{{ button_link }}">
            {{- section.settings.button_text | escape -}}
          </a> -->
        </div>
      </div>
      {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
